<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gabfosol.StopwatchController">
    <children>
        <Label fx:id="timeLabel" text="00:00:00" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="startButton" onAction="#start" text="Start" />
                <Button fx:id="stopButton" onAction="#stop" text="Stop" />
                <Button fx:id="resumeButton" onAction="#resume" text="Resume" />
                <Button fx:id="resetButton" onAction="#reset" text="Reset" />
            </children>
        </HBox>
    </children>
</VBox>
